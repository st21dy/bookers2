
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h1>Editing Book</h1>
      <%= render 'layouts/error_messages', resource: @book %>
      <%= form_with model:@book, url:"/books/#{@book.id}", class: "edit_book", local: true do |f| %>

      <div class="field">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>

      <div class="field">
        <label class="book_opinion">Opinion</label>
        <%= f.text_area :opinion %>
      </div>

      <div class="actions">
        <%= f.submit 'Update Book' %>
      </div>

      <% end %>

      <%= link_to "Show", book_path %>
      |
      <%= link_to "Back", "/books" %>

    </div>
  </div>
</div>
