<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<%= render 'layouts/error_messages', resource: @book %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
      <%= render 'users/user', user: @user %>
      
      <h2 class="mt-3">New book</h2>
      
      <%= form_with model:@newbook, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class: "form-control book_title" %>
        </div>

        <div class="form-group">
  	      <label for="book_body">Opinion</label>
          <%= f.text_area :body, class: "form-control book_body" %>
        </div>

        <div class="form-group">
          <%= f.submit "Create Book", class: "btn btn-success" %>
        </div>
      <% end %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%>
              <br>
              <%= link_to @user.name, user_path(@user) %>
            </td>
            <td><%= link_to @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book) ,class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" ,class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>
