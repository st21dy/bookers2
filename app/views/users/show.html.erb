<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<%= render 'layouts/error_messages', resource: @book %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <%= render 'books/userinfo', user: current_user %>

      <%= render 'books/newbook', books: @books %>

    </div>


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <tbody>
          <% @user.books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.opinion %></td>
            <th colspan="3"></th>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
