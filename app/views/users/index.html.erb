<%= render 'layouts/error_messages',  resource: @book%>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <%= render 'books/userinfo', user: current_user %>

      <%= render 'books/newbook', books: @books %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
          <tr>
　　　　　  <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "show", "/users/#{user.id}" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


